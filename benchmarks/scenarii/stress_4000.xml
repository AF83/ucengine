<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/romain/af83/ucengine/tsung-1.3.2/share/tsung/tsung-1.0.dtd" [] >
<!--
<tsung loglevel="debug" dumptraffic="true" version="1.0">
-->
<tsung>
  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="10000"/>
  </clients>
  <!-- Server side setup -->
  <servers>
    <server host="localhost" port="5280" type="tcp"></server>
  </servers>

  <!-- to start os monitoring (cpu, network, memory). Use an erlang
  agent on the remote machine or SNMP. erlang is the default --> 
  <load duration="200" unit="minute">
  <!-- several arrival phases can be set: for each phase, you can set
  the mean inter-arrival time between new clients and the phase
  duration -->
   <arrivalphase phase="1" duration="10" unit="minute">
     <users interarrival="0.15" unit="second"></users>
   </arrivalphase>
  </load>

<sessions>
<session name='passive' probability='50'  type='ts_http'>

<!-- Authenticate -->
<request subst="true">
  <dyn_variable name="sid" jsonpath="result"></dyn_variable>
  <http url='/api/0.1/presence/af83/root' contents='auth=password&amp;credential=root&amp;org=af83&amp;_method=PUT' method='POST'></http>
</request>

<!-- Get the roster -->
<request subst="true"><http url='/api/0.1/meeting/af83/all/demo/roster/root' contents='uid=root&amp;sid=%%_sid%%&amp;_method=PUT' method='POST'></http></request>

<!-- First request -->
<transaction name="total_pending">
<request subst="true">
  <dyn_variable name="events" jsonpath="result"/>
  <http url='/api/0.1/event/af83/demo/?uid=root&amp;sid=%%_sid%%&amp;start=0' method='GET'></http>
</request>
<setdynvars sourcetype="erlang" callback="tsung_utils:extract_last_timestamp">
  <var name="last" />
</setdynvars>
<!-- Main Loop -->
<for var="pending_counter" from="1" to="0">

  <!-- Wait for events -->
  <transaction name="pending">
    <request subst="true">
      <dyn_variable name="events" jsonpath="result"/>
      <http url='/api/0.1/event/af83/demo/?uid=root&amp;sid=%%_sid%%&amp;start=%%_last%%' method='GET'></http>
    </request>
  </transaction>

</for>
</transaction>
</session>


<session name='active' probability='50'  type='ts_http'>

<!-- Authenticate -->
<request subst="true">
  <dyn_variable name="sid" jsonpath="result"></dyn_variable>
  <http url='/api/0.1/presence/af83/root' version='1.1'  contents='auth=password&amp;credential=root&amp;org=af83&amp;_method=PUT' method='POST'></http>
</request>

<!-- Get the roster -->
<request subst="true"><http url='/api/0.1/meeting/af83/all/demo/roster/root' contents='uid=root&amp;sid=%%_sid%%&amp;_method=PUT' method='POST'></http></request>

<!-- First request -->
<transaction name="total_pending">
<request subst="true">
  <dyn_variable name="events" jsonpath="result"/>
  <http url='/api/0.1/event/af83/demo/?uid=root&amp;sid=%%_sid%%&amp;start=0' method='GET'></http>
</request>
<setdynvars sourcetype="erlang" callback="tsung_utils:extract_last_timestamp">
  <var name="last" />
</setdynvars>

<!-- Main Loop -->
<for from="1" to="100" incr="1" var="counter">

  <!-- POST an annotation -->
  <transaction name="post_annotation">
    <request subst="true">
      <http url='/api/0.1/event/af83/demo' contents='type=test&amp;uid=root&amp;sid=%%_sid%%&amp;_method=PUT' method='POST'>
      </http>
    </request>
  </transaction>

  <thinktime random='true' value='2'/>
</for>

</transaction>
</session>
</sessions>
</tsung>

